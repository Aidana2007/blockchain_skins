{
  "name": "blockchain-skins-marketplace",
  "version": "1.0.0",
  "description": "Full-stack blockchain marketplace for game skins with crowdfunding and ERC20 token economy",
  "main": "hardhat.config.js",
  "type": "commonjs",
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:holesky": "hardhat run scripts/deploy.js --network holesky",
    "node": "hardhat node",
    "test": "hardhat test",
    "seed": "node scripts/seed.js",
    "backend": "cd backend && node server.js",
    "backend:dev": "cd backend && nodemon server.js",
    "clean": "hardhat clean && rm -rf cache artifacts",
    "check-earnings": "hardhat run scripts/check-platform-earnings.js --network localhost",
    "test-fees": "hardhat run scripts/test-platform-fees.js --network localhost"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "solidity",
    "erc20",
    "crowdfunding",
    "marketplace",
    "dapp",
    "web3"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "hardhat": "^2.28.3",
    "hardhat-gas-reporter": "^2.3.0",
    "nodemon": "^3.1.11"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "ethers": "^6.16.0",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}